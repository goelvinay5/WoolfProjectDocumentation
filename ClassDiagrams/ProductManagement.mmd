        +Long id
        +String title
        +String description
        +double price
        +int stockQuantity
        +double rating
    }
    
    class Category {
        +Long id
        +String name
    }

    class Order {
        +Long id
        +double totalAmount
        +String paymentMethod
        +String paymentStatus
        +String orderStatus
    }
    
    class OrderItem {
        +Long id
        +int quantity
        +double priceAtPurchase
    }

    class Cart {
        +Long id
        +double totalPrice
    }

    class CartItem {
        +Long id
        +int quantity
    }

    class User {
        +Long id
        +String name
    }

